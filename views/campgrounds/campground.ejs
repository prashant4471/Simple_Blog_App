<%- include("../partials/header") %>

<div class="container" style="margin-top: 40px;">


<div class="jumbotron jumbotron-fluid" style="text-align: center;">
    <h1>Welcome to YelpCamp</h1>
    <p><strong>All hand-picked Campgrounds all around from India</strong></p>
    <p>
        <a class="btn btn-primary btn-large" href="/campground/new">Add a new Camp</a>
    </p>
</div>

<div class="card-deck" style="display: flexbox;" >
<% camps.forEach(function(camp){ %>
    <div class="col-md-4 col-sm-6" style="text-align: center; margin-bottom: 20px;">
        <div class="card" style="border: 2px solid black;">
            <img src="<%=camp.image%>" class="card-img-top img-thumbnail" style="height: 200px; ">
            <div class="card-body">
                <h4 class="card-title"><%=camp.name %></h4>
                <a href="/campground/<%=camp._id%>" class="btn btn-primary">Know More</a>
            </div>  
        </div>
    </div>
<% }); %>
</div>


</div>


<%- include("../partials/footer") %>