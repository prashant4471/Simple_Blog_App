<div class="container img-thumbnail" style="align-items: center; width: 30%; margin-top: 20px; margin-bottom: 20px; ">
    <h3>Edit comment</h3>
    <form action="/campground/<%=camp_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="im">Text</label>
            <input type="text" class="form-control" name="comment[text]" id="im" value="<%=comment.text%>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


